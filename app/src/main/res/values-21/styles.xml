<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!--   your app's branding color (for the app bar) -->
		<item name="colorPrimary">@color/primary_500</item>
		<item name="colorPrimaryDark">@color/primary_700</item>
		<item name="colorAccent">@color/accent_500</item>
		<item name="android:alertDialogTheme">@style/customAlert</item>
	</style>

	<style name="customAlert" parent="android:Theme.Material.Light.Dialog.Alert">
		<item name="android:buttonBarPositiveButtonStyle">@style/Button_Flat.Accent</item>
		<item name="android:buttonBarNegativeButtonStyle">@style/Button_Flat.Accent</item>
	</style>


	<style name="Button_Flat" parent="android:Widget.Material.Button.Borderless">
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="Button_Flat.Primary">
		<item name="android:textColor">@drawable/primary_flat_pressed_text</item>
	</style>

	<style name="Button_Flat.Accent">
		<item name="android:textColor">@drawable/accent_flat_pressed_text</item>
	</style>

</resources>
